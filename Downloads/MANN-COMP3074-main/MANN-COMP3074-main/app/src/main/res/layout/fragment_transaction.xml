<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TransactionFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/accNum"
            android:hint="Account Number"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/transDesc"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/amountSet"
            android:hint="Amount"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:inputType="numberDecimal" />

        <Button
            android:id="@+id/submitTransaction"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Submit Transaction" />

        <TextView
            android:id="@+id/transactionStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Transaction Status will appear here"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>